<div class="form-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-item">
      <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
    </div>
    <div class="form-item">     
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレス"%>
    </div>
    <div class="form-item"> 
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で設定してください）</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
    </div>
    <div class="form-item">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）" %>
    </div>
    <div class="button-panel">
      <%= f.submit "ユーザーを登録する",class: 'button' %>
    </div>
  <% end %>
  <div class="form-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
